# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page


#PRODUCT
GET     /                           controllers.CategoryController.index
GET     /addproduct                 controllers.CategoryController.addProduct
POST    /addproducthandle           controllers.CategoryController.addProductHandle
GET     /updateproduct/:id          controllers.CategoryController.updateProduct(id: Long)
POST    /updateproducthandle        controllers.CategoryController.updateProductHandle

GET     /products                   controllers.CategoryController.getProducts
GET     /productsJson               controllers.CategoryController.getProductsJSON

GET     /product/:id                controllers.CategoryController.getProduct(id: Long)
GET     /delete/:id                 controllers.CategoryController.delete(id: Long)
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message


GET     /users                 controllers.UserController.getUsers

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)